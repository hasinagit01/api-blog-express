# Server Configuration
SERVER_PORT=9999
NODE_ENV=development

# Database Configuration
DATABASE_URL=mysql://${DB_USER}:${DB_PASSWORD}@mysql:3306/${DB_NAME}
DB_HOST=mysql
DB_PORT=3306
DB_USER=user
DB_PASSWORD=password
DB_NAME=node_api
DB_ROOT_PASSWORD=rootpassword

# JWT Configuration
JWT_SECRET=your_jwt_secret_key_here_should_be_long_and_secure
JWT_ACCESS_EXPIRES=60m
JWT_REFRESH_EXPIRES=7d

# Redis Configuration
REDIS_URL=redis://redis:6379
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_SESSION_TTL=604800

# API Configuration
API_PREFIX=/api

# Cookie Configuration
COOKIE_SECRET=your_cookie_secret_key_here

# Health Check Configuration
HEALTH_CHECK_TIMEOUT=5000
HEALTH_CHECK_PATH=/health

# SMTP Configuration (Mailtrap)
# Create your account on https://mailtrap.io and get these credentials
SMTP_HOST=sandbox.smtp.mailtrap.io
SMTP_PORT=2525
SMTP_USER=your_mailtrap_username
SMTP_PASS=your_mailtrap_password
SMTP_SECURE=false
EMAIL_FROM=noreply@yourapp.com

# Frontend URL
FRONTEND_URL=http://localhost:3000

# BullMQ Queue Names
EMAIL_QUEUE_NAME=email